<div class="col-sm-6">
    <img src="../images/dealerstockphoto3.jpg" alt="">
</div>
<h1>Reviews</h1>
<a class="button" href="/reviews/new">Write a review</a>
<table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Review</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% reviews.forEach(review => { %>
      <tr>
        <td>
          <a href="<%= `/reviews/${review._id}` %>">
            <%= review.name %>
          </a>
        </td>
        <td>
          <%= review.email %>
        </td>
        <td>
          <%= review.reviewText %>
        </td>
        <td>
          <a href="<%=`/reviews/${review._id}/edit`%>">
            Edit
          </a>
        </td>
        <td>
          <a href="<%=`/reviews/${review._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this review?')">Delete</a>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  
