<h3>Vehicle Inventory</h3>
<% if (currentUser && currentUser.isAdmin === true) {%>
<a class="button" href="/inventory/new">Add Vehicle Inventory</a>
<% } %>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Stock Number</th>
            <th>Year</th>   
            <th>Make</th>
            <th>Model</th>
            <th>Price</th>
            <th>Condition</th>
            <th>Is Sold</th>
        </tr>
    </thead>
    <tbody>
        <% vehicles.forEach(vehicle => { %>
            <tr>
                <td>
                    <img src="/images/<%= vehicle.imageUrl %>" alt="">
                </td>
                <td>
                    <%= vehicle.stockNumber %>
                </td>
                <td>
                    <%= vehicle.year %>
                </td>
                <td>
                    <%= vehicle.make %>
                </td>
                <td>
                    <%= vehicle.model %>
                </td>
                <td>
                    <%= vehicle.price %>
                </td>
                <td>
                    <%= vehicle.condition %>
                </td>
                <td>
                    <%= vehicle.isSold %>
                </td>
                <% if (currentUser && currentUser.isAdmin === true) {%>
                <td>
                    <a href="<%=`/inventory/vehicles/${vehicle._id}/delete?_method=DELETE`%>" onclick="return confirm('Are you positive you want to delete this?')">Delete</a>
                </td>
                <% } %>
            </tr>
            <% }) %>
    </tbody>
</table>